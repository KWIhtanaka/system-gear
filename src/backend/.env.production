# Production Environment Variables for Railway
NODE_ENV=production
PORT=3000

# Database (Railway PostgreSQL variables)
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}  
DB_NAME=${PGDATABASE}
DB_USER=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# JWT Configuration (CHANGE THIS!)
JWT_SECRET=railway_production_jwt_secret_2025_secure_random_key_change_me
JWT_EXPIRES_IN=24h

# Server Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
LOG_LEVEL=info
LOG_DIR=./logs

# Security Configuration
FRONTEND_URL=https://your-frontend-url.railway.app

# Performance Configuration  
DB_POOL_MIN=2
DB_POOL_MAX=10
CACHE_TTL=300